<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discovered_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_discover_devices">

    <ImageView
        android:id="@+id/platform_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:contentDescription="@string/platform_icon"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/discovered_device_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/discovery_device_button" />

    <TextView
        android:id="@+id/last_seen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingStart="5pt"
        android:paddingEnd="0pt"
        android:text="@string/discovered_time_now" />

</LinearLayout>